@page "/Estoque/Requisicao"

@inherits IndexPage<Requisicao>

<ListItemViewLayout @ref="ListItemViewLayout"
                    TValue="Requisicao"
                    OnPageLoad="ViewLayout_PageLoad"
                    OnPesquisar="ViewLayout_Pesquisar"
                    OnItemView="ViewLayout_ItemView"
                    OnDelete="ViewLayout_Delete">
    <View>
        <ViewRequisicao @ref="View" ListItemViewLayout="ListItemViewLayout"></ViewRequisicao>
    </View>
    <ItemView>
        @{
            var item = (Requisicao)context;

            <ListItemText Primary="@item.Observacao">
                <SecondaryContent>
                    <Typography Component="span" Variant="@TypographyVariant.Body2" Color="@Color.TextPrimary" Style="display: inline;">
                        @item.Observacao
                    </Typography>
                    — I'll be in your neighborhood
                </SecondaryContent>
            </ListItemText>
        }
    </ItemView>
    <GridView>
        <GridColumn Field="RequisicaoID" HeaderText="Número" Width="40"></GridColumn>
        <GridColumn Field="Observacao" HeaderText="Observacao" Width="300"></GridColumn>
        <GridColumn Field="Status" HeaderText="Status" Width="100"></GridColumn>
    </GridView>
</ListItemViewLayout>