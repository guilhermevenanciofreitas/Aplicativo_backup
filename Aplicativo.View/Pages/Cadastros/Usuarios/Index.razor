@page "/"
@page "/Cadastros/Usuarios"

@inherits ListUsuarioPage

<ListItemViewLayout @ref="ListItemViewLayout"
                    TValue="Usuario"
                    OnPesquisar="ViewLayout_Pesquisar"
                    OnItemView="ViewLayout_ItemView"
                    OnDelete="ViewLayout_Delete">
    <View>
        <ViewUsuario @ref="ViewUsuario" ListItemViewLayout="ListItemViewLayout"></ViewUsuario>
    </View>
    <ItemView>
        @{
            var item = (Usuario)context;

            <ListItemText Primary="@item.Nome">
                <SecondaryContent>
                    <Typography Component="span" Variant="@TypographyVariant.Body2" Color="@Color.TextPrimary" Style="display: inline;">
                        @item.Login
                    </Typography>
                    — I'll be in your neighborhood
                </SecondaryContent>
            </ListItemText>
        }
    </ItemView>
    <GridView>
        <GridColumn Field="Nome" HeaderText="Nome" Width="300"></GridColumn>
        <GridColumn Field="Nome" HeaderText="Nome" Width="300"></GridColumn>
        <GridColumn Field="Nome" HeaderText="Nome" Width="300"></GridColumn>
        <GridColumn Field="Login" HeaderText="Login" Width="300"></GridColumn>
        <GridColumn Field="Login" HeaderText="Login" Width="300"></GridColumn>
        <GridColumn Field="Login" HeaderText="Login" Width="300"></GridColumn>
    </GridView>
</ListItemViewLayout>