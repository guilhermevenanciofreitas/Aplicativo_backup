@inherits ViewUsuarioPage

<EditItemViewLayout @ref="EditItemViewLayout"
                    ListItemViewLayout="ListItemViewLayout"
                    Title="Usuário"
                    Width="1250px"
                    OnLimpar="ViewLayout_Limpar"
                    OnCarregar="ViewLayout_Carregar"
                    OnSalvar="ViewLayout_Salvar"
                    OnExcluir="ViewLayout_Excluir">
    <View>

        <TabSet @ref="TabSet" Changed="StateHasChanged">
            <TabPage Id="Principal" Title="Principal">
                <Box Padding="3">

                    <TextBox @ref="TxtNome" _Label="Nome"></TextBox>

                    <TextBox @ref="TxtLogin" _Label="Login"></TextBox>

                    <TextBox @ref="TxtSenha" _Label="Senha"></TextBox>

                </Box>
            </TabPage>
            <TabPage Id="Email" Title="Email">
                <Box Padding="3">
                    <ViewUsuarioEmail @ref="ViewUsuarioEmail"></ViewUsuarioEmail>
                </Box>
            </TabPage>
        </TabSet>

    </View>
</EditItemViewLayout>