@attribute [Page("Cadastros/Produtos")]
@attribute [LoginRequired(true)]

@inherits IndexPage

<ComponentLayout OnLoad="Component_Load">
    <ListItemViewLayout @ref="ListItemViewLayout" Title="Produtos">

        <ViewPages>
            <ViewProduto @ref="View"></ViewProduto>
        </ViewPages>

        <BtnPesquisa>
            <ListViewBtnPesquisa OnPesquisar="ViewLayout_Pesquisar">
                <ListViewBtnFiltro>
                    <ViewFiltro />
                </ListViewBtnFiltro>
            </ListViewBtnPesquisa>
        </BtnPesquisa>

        <BtnNovo>
            <ListViewBtnNovo OnClick="ViewLayout_ItemView" />
        </BtnNovo>

        <BtnExcluir>
            <ListViewBtnExcluir OnClick="ViewLayout_Excluir" />
        </BtnExcluir>

