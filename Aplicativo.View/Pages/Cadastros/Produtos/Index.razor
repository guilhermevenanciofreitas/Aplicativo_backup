@attribute [Page("Cadastros/Produtos")]
@attribute [LoginRequired(true)]

@inherits IndexPage

<ComponentLayout OnLoad="Page_Load">
    <ListItemViewLayout @ref="ListView" Type="Produto" Title="Produtos">

        <ViewPages>
            <ViewProduto @ref="View" />
        </ViewPages>

        <BtnFiltro>
            <ListViewBtnFiltro ViewFiltro="ListView.ViewFiltro">
                <ViewFiltro @ref="ListView.ViewFiltro" OnConfirmar="BtnPesquisar_Click" />
            </ListViewBtnFiltro>
        </BtnFiltro>

        <BtnPesquisa>
            <ListViewBtnPesquisa @ref="ListView.ListViewBtnPesquisa" ViewFiltro="ListView.ViewFiltro" OnClick="BtnPesquisar_Click" />
        </BtnPesquisa>

        <BtnNovo>
            <ListViewBtnNovo ListItemViewLayout="ListView" OnClick="BtnItemView_Click" />
        </BtnNovo>

        <BtnExcluir>
            <ListViewBtnExcluir @ref="ListView.ListViewBtnExcluir" ListItemViewLayout="ListView" Type="Produto" OnClick="BtnExcluir_Click" />
        </BtnExcluir>

        <GridView>
            <ListViewGridView @ref="ListView.ListViewGridView" Type="Produto" OnItemView="BtnItemView_Click" OnDataChange="StateHasChanged">
                <ItemView>
                    @{
                        var item = (Produto)context;

                        <ListItemText Primary="@item.Descricao">
                            <SecondaryContent>
                                <Typography Component="span" Variant="@TypographyVariant.Body2" Color="@Color.TextPrimary" Style="display: inline;">
                                    @item.Descricao
                                </Typography>
                                — I'll be in your neighborhood
                            </SecondaryContent>
                        </ListItemText>
                    }
                </ItemView>
                <Columns>
                    <GridColumn Field="Codigo" HeaderText="Código" Width="50"></GridColumn>
                    <GridColumn Field="Descricao" HeaderText="Descricao" Width="300"></GridColumn>
                </Columns>
            </ListViewGridView>
        </GridView>
    </ListItemViewLayout>
</ComponentLayout>