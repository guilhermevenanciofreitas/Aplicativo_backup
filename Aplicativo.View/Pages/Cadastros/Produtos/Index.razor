@page "/Cadastros/Produtos"

@inherits IndexPage<Produto>

<ListItemViewLayout @ref="ListItemViewLayout"
                    TValue="Produto"
                    OnPageLoad="ViewLayout_PageLoad"
                    OnPesquisar="ViewLayout_Pesquisar"
                    OnItemView="ViewLayout_ItemView"
                    OnDelete="ViewLayout_Delete">
    <View>
        <ViewProduto @ref="View" ListItemViewLayout="ListItemViewLayout"></ViewProduto>
    </View>
    <ItemView>
        @{
            var item = (Produto)context;

            <ListItemText Primary="@item.Descricao">
                <SecondaryContent>
                    <Typography Component="span" Variant="@TypographyVariant.Body2" Color="@Color.TextPrimary" Style="display: inline;">
                        @item.Descricao
                    </Typography>
                    — I'll be in your neighborhood
                </SecondaryContent>
            </ListItemText>
        }
    </ItemView>
    <GridView>
        <GridColumn Field="Codigo" HeaderText="Código" Width="50"></GridColumn>
        <GridColumn Field="Descricao" HeaderText="Descricao" Width="300"></GridColumn>
    </GridView>
</ListItemViewLayout>