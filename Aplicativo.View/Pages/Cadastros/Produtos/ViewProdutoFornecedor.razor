@inherits ViewProdutoFornecedorPage

<ListItemViewLayout @ref="ListItemViewLayout"
                    TValue="ProdutoFornecedor"
                    Simples="true"
                    Height="300px"
                    OnItemView="ViewLayout_ItemView"
                    OnDelete="ViewLayout_Delete">
    <View>
        <EditItemViewLayout @ref="EditItemViewLayout"
                            ListItemViewLayout="ListItemViewLayout"
                            Title="Email"
                            Simples="true"
                            Width="650px"
                            OnLimpar="ViewLayout_Limpar"
                            OnCarregar="ViewLayout_Carregar"
                            OnSalvar="ViewLayout_Salvar"
                            OnExcluir="@(() => ViewLayout_Delete(new List<ProdutoFornecedor>() { ProdutoFornecedor }))">
            <View>
                <Box Padding="3">

                    <div class="row">
                        <div class="col-md-10 col-sm-10">
                            <TextBox @ref="TxtSmtp" _Label="Smtp" _CharacterCasing="CharacterCasing.LowerCase"></TextBox>
                        </div>
                        <div class="col-md-2 col-sm-12">
                            <TextBox @ref="TxtPorta" _Label="Porta" _CharacterCasing="CharacterCasing.LowerCase"></TextBox>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <TextBox @ref="TxtEmail" _Label="Email" _CharacterCasing="CharacterCasing.LowerCase"></TextBox>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <TextBox @ref="TxtSenha" _Type="@TextBoxType.Password" _Label="Senha" _CharacterCasing="CharacterCasing.None"></TextBox>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <TextBox @ref="TxtConfirmarSenha" _Type="@TextBoxType.Password" _Label="Confirmar Senha" _CharacterCasing="CharacterCasing.None"></TextBox>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-10 col-sm-12">
                            <CheckBox @ref="ChkSSL" _Label="Habilitar SSL" _Checked="true"></CheckBox>
                        </div>
                    </div>

                </Box>
            </View>
        </EditItemViewLayout>
    </View>
    <ItemView>
        @{
            var item = (ProdutoFornecedor)context;

            <ListItemText Primary="@item.Fornecedor.NomeFantasia">
                <SecondaryContent>
                    <Typography Component="span" Variant="@TypographyVariant.Body2" Color="@Color.TextPrimary" Style="display: inline;">
                        @item.Fornecedor.RazaoSocial
                    </Typography>
                    — I'll be in your neighborhood
                </SecondaryContent>
            </ListItemText>
        }
    </ItemView>
    <GridView>
        <GridColumn Field="Fornecedor.NomeFantasia" HeaderText="Fornecedor" Width="220"></GridColumn>
        <GridColumn Field="CodigoFornecedor" HeaderText="Cód. Fornec." Width="80"></GridColumn>
        <GridColumn Field="UnidadeMedida.Unidade" HeaderText="Un. Médida" Width="80"></GridColumn>
        <GridColumn Field="Contem" HeaderText="Contém" Width="70" TextAlign="TextAlign.Right"></GridColumn>
        <GridColumn Field="Preco" HeaderText="Preço Un." Width="70" Format="C2" TextAlign="TextAlign.Right"></GridColumn>
    </GridView>
</ListItemViewLayout>