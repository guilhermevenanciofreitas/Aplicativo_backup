@attribute [Page("Cadastros/ContaBancarias")]
@attribute [LoginRequired(true)]

@inherits IndexPage

<ComponentLayout OnLoad="Page_Load">
    <ListItemViewLayout @ref="ListView" Type="ContaBancaria" Title="Contas bancárias">

        <ViewPages>
            <ViewContaBancaria @ref="View" ListView="ListView" />
        </ViewPages>

        <BtnNovo>
            <ListViewBtnNovo @ref="ListView.ListViewBtnNovo" ListItemViewLayout="ListView" OnClick="BtnItemView_Click" />
        </BtnNovo>

        <BtnFiltro>
            <ListViewBtnFiltro ViewFiltro="ListView.ViewFiltro">
                <ViewFiltro @ref="ListView.ViewFiltro" OnConfirmar="BtnPesquisar_Click" />
            </ListViewBtnFiltro>
        </BtnFiltro>

        <BtnPesquisa>
            <ListViewBtnPesquisa @ref="ListView.ListViewBtnPesquisa" ViewFiltro="ListView.ViewFiltro" OnClick="BtnPesquisar_Click" />
        </BtnPesquisa>

        <BtnExcluir>
            <ListViewBtnExcluir @ref="ListView.ListViewBtnExcluir" ListItemViewLayout="ListView" OnClick="BtnExcluir_Click" />
        </BtnExcluir>

        <GridView>
            <ListViewGridView @ref="ListView.ListViewGridView" Type="ContaBancaria" OnItemView="BtnItemView_Click">
                <ItemView>
                    @{
                        var item = (ContaBancaria)context;

                        <ListItemText Primary="@item.Descricao">
                            <SecondaryContent>
                                <Typography Component="span" Variant="@TypographyVariant.Body2" Color="@Color.TextPrimary" Style="display: inline;">
                                    @item.Descricao
                                </Typography>
                                — I'll be in your neighborhood
                            </SecondaryContent>
                        </ListItemText>
                    }
                </ItemView>
                <Columns>
                    <GridColumn Field="Descricao" HeaderText="Descrição" Width="300" />
                </Columns>
            </ListViewGridView>
        </GridView>
    </ListItemViewLayout>
</ComponentLayout>