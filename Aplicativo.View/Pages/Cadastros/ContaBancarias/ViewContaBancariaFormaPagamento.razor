@inherits ViewContaBancariaFormaPagamentoPage

<ComponentLayout>
    <ListItemViewLayout @ref="ListView" Type="ContaBancariaFormaPagamento">

        <BtnNovo>
            <ListViewBtnNovo Text="Adicionar" ListItemViewLayout="ListView" OnClick="ViewLayout_ItemView" />
        </BtnNovo>

        <BtnExcluir>
            <ListViewBtnExcluir @ref="ListView.ListViewBtnExcluir" ListItemViewLayout="ListView" OnClick="ViewLayout_Excluir" />
        </BtnExcluir>

        <ViewPages>
            <EditItemViewLayout @ref="EditItemViewLayout" Title="E-mail" Width="650px" Top="100px">

                <BtnSalvar>
                    <ViewPageBtnSalvar ListItemViewLayout="ListView" OnClick="ViewLayout_Salvar" />
                </BtnSalvar>

                <BtnExcluir>
                    <ViewPageBtnExcluir ListItemViewLayout="ListView" OnClick="@(() => ViewLayout_Excluir(new List<object>() { ViewModel }))" />
                </BtnExcluir>

                <View>

                </View>
            </EditItemViewLayout>
        </ViewPages>

        <GridView>
            <ListViewGridView @ref="ListView.ListViewGridView" Type="ContaBancariaFormaPagamento" Height="400px" OnItemView="ViewLayout_ItemView" OnDataChange="StateHasChanged">
                <ItemView>
                    @{
                        var item = (ContaBancariaFormaPagamento)context;

                        <ListItemText Primary="@item.FormaPagamento.Descricao">
                            <SecondaryContent>
                                <Typography Component="span" Variant="@TypographyVariant.Body2" Color="@Color.TextPrimary" Style="display: inline;">
                                    @item.FormaPagamento.Descricao
                                </Typography>
                                — I'll be in your neighborhood
                            </SecondaryContent>
                        </ListItemText>
                    }
                </ItemView>
                <Columns>
                    <GridColumn Field="FormaPagamento.Descricao" HeaderText="ContaBancariaID" Width="200" />
                </Columns>
            </ListViewGridView>
        </GridView>
    </ListItemViewLayout>
</ComponentLayout>