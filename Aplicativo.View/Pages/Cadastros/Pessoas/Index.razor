@inherits IndexPage

<ComponentLayout OnLoad="Page_Load">
    <ListItemViewLayout @ref="ListView" Type="Pessoa" Title="@TitleList">

        <ViewPages>
            <ViewPessoa @ref="View" Tipo="@Tipo" Title="@TitleView" ListView="ListView" />
        </ViewPages>

        <BtnFiltro>
            <ListViewBtnFiltro ViewFiltro="ListView.ViewFiltro">
                <ViewFiltro @ref="ListView.ViewFiltro" OnConfirmar="BtnPesquisar_Click" />
            </ListViewBtnFiltro>
        </BtnFiltro>

        <BtnPesquisa>
            <ListViewBtnPesquisa @ref="ListView.ListViewBtnPesquisa" ViewFiltro="ListView.ViewFiltro" OnClick="BtnPesquisar_Click" />
        </BtnPesquisa>

        <BtnNovo>
            <ListViewBtnNovo @ref="ListView.ListViewBtnNovo" ListItemViewLayout="ListView" OnClick="BtnItemView_Click" />
        </BtnNovo>

        <BtnExcluir>
            <ListViewBtnExcluir @ref="ListView.ListViewBtnExcluir" ListItemViewLayout="ListView" OnClick="BtnExcluir_Click" />
        </BtnExcluir>

        <GridView>
            <ListViewGridView @ref="ListView.ListViewGridView" Type="Pessoa" OnItemView="BtnItemView_Click" OnDataChange="StateHasChanged">
                <ItemView>
                    @{
                        var item = (Pessoa)context;

                        <ListItemText Primary="@item.NomeFantasia">
                            <SecondaryContent>
                                <Typography Component="span" Variant="@TypographyVariant.Body2" Color="@Color.TextPrimary" Style="display: inline;">
                                    @item.NomeFantasia
                                </Typography>
                                — I'll be in your neighborhood
                            </SecondaryContent>
                        </ListItemText>
                    }
                </ItemView>
                <Columns>
                    <GridColumn Field="RazaoSocial" HeaderText="Razão Social" Width="300"></GridColumn>
                </Columns>
            </ListViewGridView>
        </GridView>
    </ListItemViewLayout>
</ComponentLayout>