@inherits ViewPessoaVendedorPage

<ComponentLayout>
    <ListItemViewLayout @ref="ListView" Type="PessoaVendedor">

        <BtnNovo>
            <ListViewBtnNovo @ref="ListView.ListViewBtnNovo" ListItemViewLayout="ListView" Text="Adicionar" OnClick="ViewLayout_ItemView" />
        </BtnNovo>

        <BtnExcluir>
            <ListViewBtnExcluir @ref="ListView.ListViewBtnExcluir" ListItemViewLayout="ListView" OnClick="BtnExcluir_Click" />
        </BtnExcluir>

        <ViewPages>
            <EditItemViewLayout @ref="EditItemViewLayout" Title="Vendedor" Width="650px" Top="100px">

                <BtnSalvar>
                    <ViewPageBtnSalvar ListItemViewLayout="ListView" OnClick="BtnSalvar_Click" />
                </BtnSalvar>

                <BtnExcluir>
                    <ViewPageBtnExcluir OnClick="@(() => BtnExcluir_Click(new List<object>() { ViewModel }))" />
                </BtnExcluir>

                <View>
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <TextBox @ref="TxtVendedor" _Label="Vendedor"></TextBox>
                        </div>
                    </div>
                </View>
            </EditItemViewLayout>
        </ViewPages>

        <GridView>
            <ListViewGridView @ref="ListView.ListViewGridView" Type="PessoaVendedor" Height="400px" CheckBoxWidth="38" OnItemView="ViewLayout_ItemView">
                <ItemView>
                    @{
                        var item = (PessoaVendedor)context;

                        <ListItemText Primary="@item.Vendedor.NomeFantasia">
                            <SecondaryContent>
                                <Typography Component="span" Variant="@TypographyVariant.Body2" Color="@Color.TextPrimary" Style="display: inline;">
                                    @item.Vendedor.NomeFantasia
                                </Typography>
                                — I'll be in your neighborhood
                            </SecondaryContent>
                        </ListItemText>
                    }
                </ItemView>
                <Columns>
                    <GridColumn Field="VendedorID" HeaderText="Cód. Vend." Width="80" />
                    <GridColumn Field="Vendedor.NomeFantasia" HeaderText="Vendedor" Width="620" />
                </Columns>
            </ListViewGridView>
        </GridView>
    </ListItemViewLayout>
</ComponentLayout>