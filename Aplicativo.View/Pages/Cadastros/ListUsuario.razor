@page "/"

@inherits ListUsuarioPage

<ListItemViewLayout @ref="ViewLayout"
                    ViewTitle="Usuário"
                    OnPesquisar="ViewLayout_Pesquisar"
                    OnItemView="ViewLayout_ItemView" 
                    OnDelete="ViewLayout_Delete">
    <View>
        <ViewUsuario @ref="ViewUsuario" OnClose="ViewLayout.ViewModal_Close" OnSave="ViewLayout.ViewModal_Save"></ViewUsuario>
    </View>
    <ItemView>
        @{
            var item = (context as ItemView);

            <ListItemText Primary="@item.Descricao01">
                <SecondaryContent>
                    <Typography Component="span" Variant="@TypographyVariant.Body2" Color="@Color.TextPrimary" Style="display: inline;">
                        @item.Descricao02
                    </Typography>
                    — I'll be in your neighborhood
                </SecondaryContent>
            </ListItemText>
        }
    </ItemView>
    <GridView>
        <GridColumn Field="Descricao01" HeaderText="Nome" Width="300"></GridColumn>
        <GridColumn Field="Descricao01" HeaderText="Nome" Width="300"></GridColumn>
        <GridColumn Field="Descricao01" HeaderText="Nome" Width="300"></GridColumn>
        <GridColumn Field="Descricao02" HeaderText="Login" Width="300"></GridColumn>
        <GridColumn Field="Descricao02" HeaderText="Login" Width="300"></GridColumn>
        <GridColumn Field="Descricao02" HeaderText="Login" Width="300"></GridColumn>
    </GridView>
</ListItemViewLayout>