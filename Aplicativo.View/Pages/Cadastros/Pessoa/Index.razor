@inherits IndexPage<Pessoa>

<ListItemViewLayout @ref="ListItemViewLayout"
                    TValue="Pessoa"
                    OnPageLoad="ViewLayout_PageLoad"
                    OnPesquisar="ViewLayout_Pesquisar"
                    OnItemView="ViewLayout_ItemView"
                    OnDelete="ViewLayout_Delete">
    <View>
        <ViewPessoa @ref="View" ListItemViewLayout="ListItemViewLayout" Title="@TitleView"></ViewPessoa>
    </View>
    <ItemView>
        @{
            var item = (Pessoa)context;

            <ListItemText Primary="@item.RazaoSocial">
                <SecondaryContent>
                    <Typography Component="span" Variant="@TypographyVariant.Body2" Color="@Color.TextPrimary" Style="display: inline;">
                        @item.RazaoSocial
                    </Typography>
                    — I'll be in your neighborhood
                </SecondaryContent>
            </ListItemText>
        }
    </ItemView>
    <GridView>
        <GridColumn Field="RazaoSocial" HeaderText="Razão Social" Width="300"></GridColumn>
    </GridView>
</ListItemViewLayout>