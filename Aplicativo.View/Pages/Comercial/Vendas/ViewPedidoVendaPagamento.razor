            <div class="col-md-6">
                <ViewPesquisa @ref="ViewPesquisaPlanoConta" _Label="Plano de conta" />
            </div>
            <div class="col-md-6">
                <ViewPesquisa @ref="ViewPesquisaCentroCusto" _Label="Centro de custo" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <ViewPesquisa @ref="ViewPesquisaContaBancaria" _Label="Conta Bancária" />
            </div>
            <div class="col-md-6">
