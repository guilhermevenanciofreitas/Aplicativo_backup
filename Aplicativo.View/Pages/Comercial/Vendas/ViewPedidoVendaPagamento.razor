            <TextBox @ref="TxtDocumento" _Label="Número Doc." OnInput="TxtDocumento_Input" />
        </div>
        <div class="col-md-6">
            <ViewPesquisa @ref="ViewPesquisaPessoa" _Label="Fornecedor" />
        </div>*@
                    <!--<div class="col-md-3">
            <DatePicker @ref="DtpEmissao" _Label="Emissão" OnChange="DtpEmissao_Change" />
        </div>
    </div>-->
