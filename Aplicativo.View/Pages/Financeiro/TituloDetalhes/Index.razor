@inherits IndexPage

<ComponentLayout OnLoad="Component_Load">
    <ListItemViewLayout @ref="ListItemViewLayout" Title="@TitleList">

        <ViewPages>
            <AddTitulo @ref="Add"></AddTitulo>
            <ViewTituloDetalhe @ref="View"></ViewTituloDetalhe>
        </ViewPages>

        <BtnPesquisa>
            <ListViewBtnPesquisa OnPesquisar="ViewLayout_Pesquisar">
                <ListViewBtnFiltro>
                    <ViewFiltro />
                </ListViewBtnFiltro>
            </ListViewBtnPesquisa>
        </BtnPesquisa>

        <BtnNovo>
            <ListViewBtnNovo OnClick="BtnNovo_Click" />
        </BtnNovo>

        @*<BtnExcluir>
            <ListViewBtnExcluir OnClick="ViewLayout_Excluir" />
        </BtnExcluir>*@

        <!--<View>-->
        @*<ViewUsuario @ref="View" ListItemViewLayout="ListItemViewLayout"></ViewUsuario>*@
        <!--</View>-->
