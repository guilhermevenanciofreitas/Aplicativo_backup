@inherits ViewConexaoPage

<ComponentLayout OnLoad="Component_Load">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="form-group">
                <TextBox @ref="TxtName" _Label="Nome"></TextBox>
            </div>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="form-group">
                <TextBox @ref="TxtServer" _Label="Server" _CharacterCasing="CharacterCasing.None"></TextBox>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="form-group">
                <TextBox @ref="TxtDatabase" _Label="Database" _CharacterCasing="CharacterCasing.None"></TextBox>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="form-group">
                <TextBox @ref="TxtUserId" _Label="User ID" _CharacterCasing="CharacterCasing.None"></TextBox>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="form-group">
                <TextBox @ref="TxtPassword" _Label="Password" _CharacterCasing="CharacterCasing.None"></TextBox>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="form-group">
                <Button Color="@Color.Primary" FullWidth Size="@Size.Large" Variant="@ButtonVariant.Contained" OnClick="BtnConfirmar_Click">Confirmar</Button>
            </div>
        </div>
    </div>
</ComponentLayout>