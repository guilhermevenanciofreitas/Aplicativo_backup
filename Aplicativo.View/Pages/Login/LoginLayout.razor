@inherits LoginLayoutPage;

<ComponentLayout OnResize="Page_Resize">
    <div class="auth-container">
        <div class="row" style="height: 100%">

            @if (HelpDisplay.Display.Width > (int)LayoutSize.Large)
            {
                <div class="col-lg-7">
                    <div class="auth-image">
                        <div class="auth-quote-inner">
                            <Typography Class="auth-quote-text" Variant="@TypographyVariant.H5">
                                Hella narwhal Cosby sweater McSweeney's, salvia kitsch before
                                they sold out High Life.
                            </Typography>
                            <div class="auth-quote-person">
                                <Typography Class="auth-quote-name" Variant="@TypographyVariant.Body1">
                                    Takamaru Ayako
                                </Typography>
                                <Typography Class="auth-quote-bio" Variant="@TypographyVariant.Body2">
                                    Manager at inVision
                                </Typography>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="col-lg-5 col-sm-12">
                <div class="auth-body">
                    @ChildContent
                </div>
            </div>
        </div>
    </div>
</ComponentLayout>