@inherits DateTimePickerComponent

@if (HelpDisplay.Display.Width > 0 && HelpDisplay.Display.Width <= (int)LayoutSize.Small)
{
    <TextField Type="datetime-local"
               Value="@(Value.HasValue ? Value.Value.ToString("yyyy-MM-ddTHH:mm") : "")"
               OnChange="Change"
               Label="@_Label"
               Margin="@Margin.Normal"
               Variant="@TextFieldVariant.Outlined"
               Shrink="true"
               FullWidth="true" />
}

@if (HelpDisplay.Display.Width > (int)LayoutSize.Small)
{
    @if (_Label != null)
    {
        <label for="@Element.Id">@_Label</label>
    }

    <input type="datetime-local" id="@Element.Id" class="form-control" style="padding: .375rem .35rem;" @ref="@Element" value="@(Value.HasValue ? Value.Value.ToString("yyyy-MM-ddTHH:mm") : "")" @onchange="Change" placeholder="@_PlaceHolder" readonly="@_ReadOnly" />

}