@inherits NumericBoxComponent

@if (HelpDisplay.Display.Width > 0 && HelpDisplay.Display.Width <= (int)LayoutSize.Small)
{
    <TextField @ref="TextField"
               Label="@_Label"
               Margin="@Margin.Normal"
               Variant="@TextFieldVariant.Outlined"
               Style="width: 100%" />
}

@if (HelpDisplay.Display.Width > (int)LayoutSize.Small)
{

    @if (_Label != null)
    {
        <label for="@Element.Id">@_Label</label>
    }

    <input type="text" id="@Element.Id" class="form-control" @ref="@Element" maxlength="@_MaxLength" placeholder="@_PlaceHolder" readonly="@_ReadOnly" @onfocusout="NumericBox_OnLeave" @onkeydown="NumericBox_OnKeyDown" @onkeypress="NumericBox_OnKeyPress" @onkeyup="NumericBox_OnKeyUp" autocomplete="off" />

}