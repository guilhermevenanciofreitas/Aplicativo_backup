@if (_Label != null)
{
    <label for="@Element.Id">@_Label</label>
}

<select class="form-control" id="@Element.Id" @ref="Element" @bind="@SelectedValue">
    @if (@_Items != null)
    {
        @foreach (var item in @_Items)
        {
            <option value="@item.Value">@item.Text</option>
        }
    }
</select>